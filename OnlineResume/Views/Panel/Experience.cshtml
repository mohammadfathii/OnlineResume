@model List<Experience>
@{
    Layout = "_PanelLayout";
}

<a asp-controller="Panel" asp-action="CreateExperience" class="btn btn-block btn-success">Create One</a>
<br />
<hr />
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>#Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @if (Model.Count > 0 && Model != null)
        {
            @foreach (var exp in Model)
            {
                <tr>
                    <td>@exp.Id</td>
                    <td>@exp.Title</td>
                    <td>@exp.Description</td>
                    <td class="btn-group">
                        <a class="btn btn-danger" asp-controller="Panel" asp-action="RemoveExperience" asp-route-id="@exp.Id">Remove</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>0</td>
                <td>not found</td>
                <td>not found</td>
                <td class="btn-group">
                    <a class="btn btn-danger disabled">Remove</a>
                </td>
            </tr>
        }
    </tbody>

</table>
