@using OnlineResume.Models.ViewModels.Project;
@model CreateProjectViewModel;
@{
    Layout = "_PanelLayout";
}

<h1>Create New Project</h1>
<br />

<form asp-controller="Panel" asp-action="CreateProject" method="post">

    <div class="form-group">

        <label class="form-label" for="Title">Title : </label>
        <input type="text" asp-for="@Model.Title" class="form-control"/>

    </div>

    <div class="form-group">

        <label class="form-label" for="Description">Description : </label>
        <input type="text" asp-for="@Model.Description" class="form-control" />

    </div>


    <div class="form-group">

        <label class="form-label" for="URL">URL : </label>
        <input type="text" asp-for="@Model.URL" class="form-control" />

    </div>

    <div class="btn-group">
        <button type="submit" class="btn btn-success">Create</button>
    </div>

</form>

