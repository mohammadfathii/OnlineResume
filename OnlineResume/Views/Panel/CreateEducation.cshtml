@using OnlineResume.Models.ViewModels.Education;
@model CreateEducationViewModel;
@{
    Layout = "_PanelLayout";
}


<h1>Create New Education</h1>

<form asp-controller="Panel" asp-action="CreateEducation" method="post" enctype="multipart/form-data">
    <div class="form-group">

        <label class="form-label" for="Title">Title : </label>
        <input type="text" asp-for="@Model.Title" class="form-control"/>
        <span class="text-danger" asp-validation-for="@Model.Title"></span>

    </div>

    <div class="form-group">

        <label class="form-label" for="Image">Image : </label>
        <input type="file" asp-for="@Model.Image" class="form-control" />
        <span class="text-danger" asp-validation-for="@Model.Image"></span>

    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-block btn-success">Create</button>
    </div>

</form>


