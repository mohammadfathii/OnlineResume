@using OnlineResume.Models.ViewModels.PersonalData;
@model PersonalDataViewModel;
@{
    Layout = "_PanelLayout";
}
<h1>Personal Information :</h1>
<br />
<hr />
<br />

<form asp-controller="Panel" asp-action="PersonalData" method="post" class="mb-5 pb-1">

    <div class="form-group">
        <label class="form-label" for="FullName">FullName : </label>
        <input type="text" asp-for="@Model.FullName" class="form-control"/>
    </div>

    <div class="form-group">
        <label class="form-label" for="Age">Age : </label>
        <input type="number" asp-for="@Model.Age" class="form-control" />

    </div>

    <div class="form-group">
        <label class="form-label" for="BirthDay">BirthDay : </label>
        <input type="datetime" asp-for="@Model.BirthDay" class="form-control" />

    </div>

    <div class="form-group">
        <label class="form-label" for="Email">Email : </label>
        <input type="email" asp-for="@Model.Email" class="form-control" />

    </div>

    <div class="form-group">
        <label class="form-label" for="PhoneNumber">PhoneNumber : </label>
        <input type="text" asp-for="@Model.PhoneNumber" class="form-control" />


    </div>

    <div class="form-group">
        <label class="form-label" for="AboutMe">About Me : </label>

        <textarea type="text" asp-for="@Model.AboutMe" class="form-control"></textarea>


    </div>

    <button type="submit" class="btn btn-primary">Update Personal Data</button>


</form>

